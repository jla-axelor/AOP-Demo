<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
	
	<grid model="com.axelor.people.db.Mobile" title="Mobile Phones" name="mobile_grid">
		<field name="fullName" />
		<field name="image" />
		<field name="random" />
		
	</grid>
	<form model="com.axelor.people.db.Mobile" title="Mobile Phone" name="mobile_form" onSave="action-people-monile-onsave">
		<panel-stack>
		<panel name="stackPanle1" title="Stack Panel 1">
			<field name="name" />
			<field name="price" />
			<field name="fullName" />
		</panel>
		<panel name="stackPanle2" title="Stack Panel 2">	
			<field name="image" widget="binary-link"/>
			<field name="random" />
			
			<field name="$dummyDemo" type="boolean" title="Dummy Field Demo" readonly="true"/>
			<!-- This is dummy field that i haven't created in domain and $ sign means it wont create our form dirty (means after performing action form is in not went in unsaved mode)-->
			<field name="dummy2" type="one-to-many" target="com.axelor.people.db.Cloths" colSpan="12" title="Dummy demo 2" />
			
		</panel>
		</panel-stack>
		<panel sidebar="true" name="panel2" title="side Panel">
			<button onClick="action-people-mobile-fill-dummy" name="checkDummy" title="Check Dummy Field"/>
		</panel>
	</form>
	<action-record name="action-people-monile-onsave" model="com.axelor.people.db.Mobile">
		<field name="random" expr="eval:'1211'"/> 
	</action-record>
	<action-record name="action-people-mobile-fill-dummy" model="com.axelor.people.db.Mobile">
		<field name="$dummyDemo" expr="eval: true"/>
	</action-record>	
	
</object-views>
