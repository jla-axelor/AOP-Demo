<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
	
	<grid model="com.axelor.people.db.Mobile" title="Mobile Phones" name="mobile_grid">
		<field name="fullName" />
		<field name="image" />
		<field name="random" />
		
	</grid>
	<form model="com.axelor.people.db.Mobile" title="Mobile Phone" name="mobile_form" onSave="action-people-monile-onsave" canAttach="false">
		<panel>
			<field name="name" />
			<field name="price" />
			<field name="fullName" />	
			<field name="image" />
			<field name="random" />
		</panel>
	</form>
	<action-record name="action-people-monile-onsave" model="com.axelor.people.db.Mobile">
		<field name="random" expr="1211"/>
	</action-record>	
	
</object-views>
